<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_isi_surat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="studio.emcorp.hafizhafizah.IsiSuratActivity">
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btnPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_play" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:id="@+id/loBottom">
        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="FULL"
            android:id="@+id/btnFull"
            android:background="@drawable/round_button"
            android:padding="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="TAJWID"
            android:background="@drawable/round_button"
            android:padding="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/btnTajwid"
            android:layout_weight="1"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:fillViewport="true"
        android:layout_marginBottom="70dp"
        android:id="@+id/loFull"
        android:scrollbarAlwaysDrawVerticalTrack="true">
        <ImageView
            android:id="@+id/imgFull"
            android:adjustViewBounds="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:src="@drawable/adhdhuha_full"/>
    </ScrollView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:fillViewport="true"
        android:visibility="gone"
        android:layout_marginBottom="70dp"
        android:id="@+id/loTajwid"
        android:scrollbarAlwaysDrawVerticalTrack="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imgTajwid"
                android:adjustViewBounds="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                android:src="@drawable/adhdhuha_full"/>
            <ImageView
                android:id="@+id/imgTajwidSurat"
                android:adjustViewBounds="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                android:src="@drawable/ic_tajwid_surat"/>
        </LinearLayout>
    </ScrollView>
