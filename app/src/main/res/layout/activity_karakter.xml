<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_karakter"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="studio.emcorp.hafizhafizah.KarakterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.8"
            android:text="PILIH KARAKTER"
            android:textStyle="bold"
            android:textSize="36sp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:textColor="#ffffff"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="20dp"
            android:orientation="horizontal">
            <com.balysv.materialripple.MaterialRippleLayout
                style="@style/RippleStyleBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1">
                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_hafiz"
                    android:scaleType="fitCenter"
                    android:id="@+id/btnCowok"
                    android:background="@drawable/round_button"/>
            </com.balysv.materialripple.MaterialRippleLayout>
            <com.balysv.materialripple.MaterialRippleLayout
                style="@style/RippleStyleBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1">
                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/btnCewek"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_hafizah"
                    android:scaleType="fitCenter"
                    android:background="@drawable/round_button"/>
            </com.balysv.materialripple.MaterialRippleLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:visibility="invisible"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:padding="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/round_button"
                android:layout_weight="1"
                android:textStyle="bold"
                android:gravity="center|top"
                android:text="HAFIZ"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:padding="20dp"
                android:layout_marginRight="20dp"
                android:textStyle="bold"
                android:background="@drawable/round_button"
                android:gravity="center|top"
                android:layout_weight="1"
                android:text="HAFIZAH"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
